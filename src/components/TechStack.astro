---
const technologies = [
  { key: 'html', className: 'tech-html', label: 'HTML5' },
  { key: 'css', className: 'tech-css', label: 'CSS3' },
  { key: 'javascript', className: 'tech-javascript', label: 'JavaScript' },
  { key: 'typescript', className: 'tech-typescript', label: 'TypeScript' },
  { key: 'php', className: 'tech-php', label: 'PHP' },
  { key: 'node', className: 'tech-node', label: 'Node.js' },
  { key: 'react', className: 'tech-react', label: 'React' },
  { key: 'tailwind', className: 'tech-tailwind', label: 'Tailwind CSS' },
  { key: 'shopify', className: 'tech-shopify', label: 'Shopify' },
  { key: 'wordpress', className: 'tech-wordpress', label: 'WordPress' },
  { key: 'sass', className: 'tech-sass', label: 'Sass' },
  { key: 'figma', className: 'tech-figma', label: 'Figma' },
  { key: 'alpine', className: 'tech-alpine', label: 'Alpine.js' },
  { key: 'htmx', className: 'tech-htmx', label: 'HTMX' },
  { key: 'mysql', className: 'tech-mysql', label: 'MySQL' },
  { key: 'mongodb', className: 'tech-mongodb', label: 'MongoDB' },
  { key: 'hubspot', className: 'tech-hubspot', label: 'HubSpot' },
];
---

<section class="tools-section py-16" id="tools">
  <div class="max-w-4xl mx-auto px-4">
    <div class="tools-card">
      <div class="tools-chip">Tools &amp; Tech</div>
      <div class="tools-grid">
        {technologies.map((tech) => (
          <figure class="flex flex-col items-center text-center" aria-label={tech.label}>
            <span class={`logoImg ${tech.className}`} role="img" aria-label={tech.label}></span>
            <figcaption class="text-xs mt-2 font-semibold text-muted">{tech.label}</figcaption>
          </figure>
        ))}
      </div>
    </div>
  </div>
</section>
